# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
POSTGRES_DB=n8n_scraper
POSTGRES_USER=scraper_user
POSTGRES_PASSWORD=scraper_pass
POSTGRES_HOST=n8n-scraper-database
POSTGRES_PORT=5432
DATABASE_URL=postgresql://scraper_user:scraper_pass@n8n-scraper-database:5432/n8n_scraper

# Database Performance
POSTGRES_SHARED_BUFFERS=256MB
POSTGRES_EFFECTIVE_CACHE_SIZE=768MB
POSTGRES_WORK_MEM=16MB
POSTGRES_MAX_CONNECTIONS=100

# ============================================================================
# SCRAPER CONFIGURATION  
# ============================================================================
MAX_CONCURRENT=3
RATE_LIMIT=2.0
BATCH_SIZE=20
MAX_RETRIES=3
HEADLESS=true

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO
PYTHONUNBUFFERED=1

# ============================================================================
# DASHBOARDS
# ============================================================================
REALTIME_DASHBOARD_PORT=5001
DATABASE_VIEWER_PORT=5004

# ============================================================================
# DIRECTORIES
# ============================================================================
DATA_DIR=/app/data
MEDIA_DIR=/app/media
LOGS_DIR=/app/logs






